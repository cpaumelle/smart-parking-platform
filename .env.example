# Smart Parking Platform V6 - Environment Configuration

# ============================================
# Application
# ============================================
APP_NAME="Smart Parking Platform V6"
APP_VERSION="6.0.0"
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql+asyncpg://parking_user:parking_password@localhost:5432/parking_v6
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=40
ENABLE_RLS=true

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# ============================================
# ChirpStack (LoRaWAN)
# ============================================
CHIRPSTACK_HOST=localhost
CHIRPSTACK_PORT=8080
CHIRPSTACK_API_KEY=your-chirpstack-api-key-here
CHIRPSTACK_SYNC_INTERVAL=300

# ============================================
# Security & Authentication
# ============================================
SECRET_KEY=GENERATE-A-SECURE-32-CHARACTER-SECRET-KEY-HERE
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30

# ============================================
# Platform Tenant
# ============================================
PLATFORM_TENANT_ID=00000000-0000-0000-0000-000000000000
PLATFORM_TENANT_NAME=Platform
PLATFORM_TENANT_SLUG=platform

# ============================================
# CORS (comma-separated origins)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Feature Flags
# ============================================
USE_V6_API=true
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true
ENABLE_GRAPHQL=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_TENANT=100

# ============================================
# Webhooks
# ============================================
WEBHOOK_SECRET_KEY=your-webhook-secret-key-here
WEBHOOK_SIGNATURE_HEADER=X-Webhook-Signature
WEBHOOK_SPOOL_DIR=/var/spool/parking-uplinks

# ============================================
# Downlink Queue
# ============================================
DOWNLINK_QUEUE_NAME=parking:downlinks
DOWNLINK_MAX_RETRIES=5
DOWNLINK_RETRY_BACKOFF_BASE=2
DOWNLINK_RATE_LIMIT_GATEWAY=30
DOWNLINK_RATE_LIMIT_TENANT=100

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=true
SENTRY_DSN=
JAEGER_ENABLED=false
